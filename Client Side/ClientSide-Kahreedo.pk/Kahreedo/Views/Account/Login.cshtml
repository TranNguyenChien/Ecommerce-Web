@{
    ViewBag.Title = "Login";
}

<!-- Cart view section -->
<section id="aa-myaccount">
    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <div class="aa-myaccount-area">
                    <div class="row">
                        <div class="col-md-6">
                            <div class="aa-myaccount-login">
                                <h4>Đăng nhập</h4>
                               
                            @using (Html.BeginForm("Login", "Account", FormMethod.Post, new { @class = "aa-login-form" }))
                                {
                                    <label for="">Tài khoản hoặc Email<span>*</span></label>
                                    <input name="UserName" type="text" required placeholder="Tài khoản hoặc Email">
                                    <label for="">Mật khẩu<span>*</span></label>
                                    <input name="Password" type="password" required placeholder="Mật khẩu">
                                    <button type="submit" class="aa-browse-btn">Đăng nhập</button>
                                    <label class="rememberme" for="rememberme"><input type="checkbox" id="rememberme"> Lưu mật khẩu </label>
                                    <p class="aa-lost-password"><a href="#">Quên mật khẩu?</a></p>
                            }
                                
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="aa-myaccount-register">
                                <h4>Đăng kí</h4>

                                @using (Html.BeginForm("Register", "Account", FormMethod.Post, new { @class = "aa-login-form" }))
                                {
                                    <label for="">Tên<span>*</span></label>
                                    <input name="First_Name" type="text" placeholder="Tên">

                                    <label for="">Họ<span>*</span></label>
                                    <input name="Last_Name" type="text" placeholder="Họ">

                                    <label for="">Tài khoản<span>*</span></label>
                                    <input name="UserName" type="text" placeholder="Tài khoản">

                                    <label for="">Mật khẩu<span>*</span></label>
                                    <input name="Password" type="password" placeholder="Mật khẩu">

                                    <label for="">Email<span>*</span></label>
                                    <input name="Email" type="text" placeholder="Email">

                                    <label for="">Số điện thoại<span>*</span></label>
                                    <input name="Mobile1" type="text" placeholder="Số điện thoại">

                                    <label for="">Địa chỉ<span></span></label>
                                    <input name="Address1" type="text" placeholder="Địa chỉ">

                                    <button type="submit" class="aa-browse-btn">Đăng kí</button>
                                }

                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
<!-- / Cart view section -->
